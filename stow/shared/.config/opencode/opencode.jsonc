{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "autoupdate": true,
  "provider": {
    "anthropic": {
      "models": {},
      "options": {
        "apiKey": "{env:ANTHROPIC_API_KEY}"
      }
    },
    "google": {
      "models": {
        "gemini-2.5-flash": {},
        "gemini-2.5-pro": {}
      },
      "options": {
        "apiKey": "{env:GEMINI_API_KEY}"
      }
    },
    "ollama": {
      // https://opencode.ai/docs/providers/#ollama
      "npm": "@ai-sdk/openai-compatible",
      "options": {
        "baseURL": "http://localhost:11434/v1"
      },
      "models": {
        "llama3.1:8b": {},
        "qwen3:1.7b": {
          // Tools causes the model to go bananas and just use them repeatedly
          // "tools": true
        }
      }
    }
  },
  "agent": {
    "neovim": {
      "model": "google/gemini-2.5-flash"
    },
    "github": {
      "model": "google/gemini-2.5-flash"
    },
    "security-auditor": {
      "model": "google/gemini-2.5-pro"
    },
    "docs-writer": {
      "model": "google/gemini-2.5-pro"
    },
    "nix": {}
    // TODO: add openai provider
    // "deep-thinker": {
    //   "model": "openai/gpt-5-turbo",
    //   "description": "Agent that uses high reasoning effort for complex problems",
    //   "reasoningEffort": "high",
    //   "textVerbosity": "low"
    // }
  },
  "mcp": {
    "tavily": {
      "url": "https://mcp.tavily.com/mcp/?tavilyApiKey={env:TAVILY_API_KEY}",
      "enabled": true,
      "type": "remote"
    },
    "github": {
      // token config: https://github.com/github/github-mcp-server#token-security-best-practices
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "-e",
        "GITHUB_PERSONAL_ACCESS_TOKEN",
        "ghcr.io/github/github-mcp-server"
      ],
      "enabled": true,
      "environment": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "{env:GITHUB_PERSONAL_ACCESS_TOKEN}"
      },
      "type": "local"
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "YOUR_API_KEY"
      },
      "enabled": true
    }
  }
}
