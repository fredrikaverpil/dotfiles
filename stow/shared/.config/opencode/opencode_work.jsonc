{
  // Keybinds: https://opencode.ai/docs/keybinds
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "autoupdate": true,
  "share": "disabled",
  "provider": {
    "google-vertex": {
      "models": {
        "gemini-2.5-flash": {},
        "gemini-2.5-pro": {},
        "gemini-3-pro-preview": {},
        "gemini-3-flash-preview": {}
      },
      "options": {
        "project": "{env:GOOGLE_CLOUD_PROJECT}",
        "location": "{env:GOOGLE_CLOUD_LOCATION}"
      }
    },
    "google-vertex-anthropic": {
      "models": {
        "claude-haiku-4-5@20251001": {},
        "claude-sonnet-4-5@20250929": {},
        "claude-opus-4-5@20251101": {}
      },
      "options": {
        "project": "{env:GOOGLE_CLOUD_PROJECT}",
        "location": "{env:GOOGLE_CLOUD_LOCATION}"
      }
    }
  },
  "agent": {
    "plan": {
      "model": "google-vertex/gemini-3-pro-preview"
    },
    "build": {
      "model": "google-vertex/gemini-3-pro-preview"
    },
    "neovim": {
      "model": "google-vertex/gemini-2.5-flash"
    },
    "github": {
      "model": "google-vertex/gemini-3-pro-preview"
    },
    "security-auditor": {
      "model": "google-vertex/gemini-3-pro-preview"
    },
    "docs-writer": {
      "model": "google-vertex/gemini-3-pro-preview"
    },
    "jira": {
      "model": "google-vertex/gemini-3-pro-preview"
    }
    // TODO: figure out settings for gemini 2.5 pro
    // "deep-thinker": {
    //   "description": "Agent that uses high reasoning effort for complex problems",
    //   "model": "openai/gpt-5-turbo",
    //   "reasoningEffort": "high",
    //   "textVerbosity": "low"
    // }
  },
  "mcp": {
    "tavily": {
      "command": ["npx", "-y", "tavily-mcp"],
      "enabled": true,
      "type": "local",
      "environment": {
        "TAVILY_API_KEY": "{env:TAVILY_API_KEY}"
      }
    },
    "serena": {
      "enabled": false, // Invalid 'tools': array too long. Expected an array with maximum length 128, but got an array with length 142 instead.
      "type": "local",
      "command": [
        "uvx",
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "ide-assistant"
      ],
      "environment": {}
    },
    "githublocal": {
      "enabled": false,
      "type": "local",
      // token config: https://github.com/github/github-mcp-server#token-security-best-practices
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "-e",
        "GITHUB_PERSONAL_ACCESS_TOKEN",
        "ghcr.io/github/github-mcp-server"
      ],
      "environment": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "{env:GITHUB_MCP_SERVER_TOKEN}"
      }
    },
    "githubremote": {
      "enabled": true,
      "type": "remote",
      "url": "https://api.githubcopilot.com/mcp",
      "headers": {
        // token config: https://github.com/github/github-mcp-server#token-security-best-practices
        "Authorization": "Bearer {env:GITHUB_MCP_SERVER_TOKEN}"
      }
    },
    "context7": {
      "enabled": true,
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp",
        "--api-key",
        "{env:CONTEXT7_API_KEY}"
      ]
    },
    "roadie-api-docs": {
      "enabled": false,
      "type": "remote",
      "url": "https://api.roadie.so/api/mcp/v1/api-docs-query",
      "headers": {
        "Authorization": "Bearer {env:ROADIE_API_TOKEN}"
      }
    },
    "roadie-backend-config": {
      "enabled": false,
      "type": "remote",
      "url": "https://api.roadie.so/api/mcp/v1/backend-config",
      "headers": {
        "Authorization": "Bearer {env:ROADIE_API_TOKEN}"
      }
    },
    "roadie-catalog-decorators": {
      "enabled": false,
      "type": "remote",
      "url": "https://api.roadie.so/api/mcp/v1/catalog-decorators",
      "headers": {
        "Authorization": "Bearer {env:ROADIE_API_TOKEN}"
      }
    },
    "roadie-scaffolder": {
      "enabled": false,
      "type": "remote",
      "url": "https://api.roadie.so/api/mcp/v1/scaffolder-use",
      "headers": {
        "Authorization": "Bearer {env:ROADIE_API_TOKEN}"
      }
    },
    "roadie-catalog": {
      "enabled": false,
      "type": "remote",
      "url": "https://api.roadie.so/api/mcp/v1/rich-catalog-entity",
      "headers": {
        "Authorization": "Bearer {env:ROADIE_API_TOKEN}"
      }
    }

