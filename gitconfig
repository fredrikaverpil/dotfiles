[user]
	name = Fredrik Averpil
	email = fredrik.averpil@gmail.com
[core]
	excludesfile = ~/.gitignore_global
	editor = code --wait
[pull]
	ff = only
[merge]
	tool = vscode
[mergetool "vscode"]
	cmd = code --wait $MERGED
[diff]
	tool = vscode
[difftool "vscode"]
	cmd = code --wait --diff $LOCAL $REMOTE
[init]
	defaultBranch = main
[rebase]
	autostash = true
[commit]
	template = ~/.gitmessage
[push]
	autoSetupRemote = true

