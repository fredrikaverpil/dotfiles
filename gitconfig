[user]
	name = Fredrik Averpil
	email = fredrik.averpil@gmail.com
[core]
	excludesfile = ~/.gitignore_global
  # editor = code --wait
	editor = nvim
[pull]
	ff = only
[merge]
  # tool = vscode
	tool = neovim
[mergetool "vscode"]
	cmd = code --wait $MERGED
[mergetool "neovim"]
	cmd = nvim -d $LOCAL $REMOTE $BASE $MERGED
[diff]
  # tool = vscode
	tool = neovim
[difftool "vscode"]
	cmd = code --wait --diff $LOCAL $REMOTE
[difftool "neovim"]
	cmd = nvim -d $LOCAL $REMOTE
[init]
	defaultBranch = main
[rebase]
	autostash = true
[commit]
	template = ~/.gitmessage
[push]
	autoSetupRemote = true

[include]
    path = ~/.gitconfig_1password

# Always keep gitconfig for work at bottom of this file
[includeIf "gitdir:~/code/repos/doktor/**/.git"]
	path = ~/.gitconfig_doktor
