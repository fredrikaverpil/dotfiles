# Usage:
# brew bundle --file=path/to/Brewfile

# Manually install using "brew install --cask xxx --appdir=/Applications"
cask_args appdir: '/Applications'

# Taps (third-party repositories)
tap 'homebrew/bundle'
tap 'homebrew/core'
tap 'caskroom/cask'
tap 'caskroom/versions'

# CLIs
brew 'gh'
brew 'mas'
brew 'pipx'
brew 'pyenv-virtualenv'
brew 'pyenv'
brew 'starship'
brew 'tree'

# Required to build python via pyenv: https://github.com/pyenv/pyenv/wiki
brew 'openssl readline sqlite3 xz zlib'

# GUIs
cask 'appcleaner'
cask 'docker'
cask 'iterm2'
cask 'spotify'
cask 'visual-studio-code'

# Apple Store
mas '1Password', id: 1333542190
